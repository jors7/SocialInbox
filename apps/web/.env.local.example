# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Meta App Configuration (for Instagram Messaging)
META_APP_ID=your-app-id-from-meta
META_APP_SECRET=your-app-secret-from-meta
META_WEBHOOK_VERIFY_TOKEN=33d5bfdcd0883a553b84d65665a060fb86114db7af1676e18b0630d2a961fb5e
META_GRAPH_API_VERSION=v20.0

# Facebook OAuth (for connecting Instagram accounts)
NEXT_PUBLIC_FACEBOOK_APP_ID=your-app-id-from-meta
NEXT_PUBLIC_FACEBOOK_REDIRECT_URI=https://your-app.vercel.app/auth/facebook-callback

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
NODE_ENV=production

# Encryption key for token storage (generate with: openssl rand -hex 32)
APP_ENCRYPTION_KEY=your-32-byte-encryption-key

# Optional: For local development
# NEXT_PUBLIC_APP_URL=http://localhost:3000
# NEXT_PUBLIC_FACEBOOK_REDIRECT_URI=http://localhost:3000/auth/facebook-callback