# SocialInbox Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Facebook/Instagram App Configuration
# Create an app at https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Instagram Webhook Verification Token
# Generate a random string for webhook verification
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your-random-verify-token

# Encryption Configuration
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=your-32-character-encryption-key

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Sentry Error Tracking
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
# SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Optional: Analytics
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id