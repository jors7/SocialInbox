{
  "name": "socialinbox",
  "version": "1.0.0",
  "description": "Instagram DM automation platform - ManyChat alternative",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:all": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "type-check": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "db:migrate": "cd supabase && supabase migration up",
    "db:types": "supabase gen types typescript --local > packages/shared/src/database.types.ts",
    "create-admin": "node scripts/create-admin.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.4"
}
